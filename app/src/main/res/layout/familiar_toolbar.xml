<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_root"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="#0195ff"
    android:fitsSystemWindows="true"
    android:minHeight="48dp"
    app:contentInsetLeft="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetStart="0dp"
    app:title="@null">

    <LinearLayout
        android:id="@+id/base_top_back"
        style="@style/baseWidgetBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/base_top_back_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/activity_top_back"
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:clickable="false"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/base_top_back_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:maxWidth="100dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:clickable="false"
            android:paddingRight="3dp"
            android:paddingLeft="1dp"
            android:singleLine="true"
            android:text="返回"
            android:textColor="@color/title_txt_white"
            android:textSize="15sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/base_top_title_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginRight="@dimen/dp_60"
        android:layout_marginLeft="@dimen/dp_60"
        android:background="?attr/selectableItemBackground"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/base_top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/title_txt_white"
            android:textSize="18sp"
            android:visibility="visible" />
        <ImageView
            android:id="@+id/base_top_arrow"
            android:src="@drawable/lepay_icon_arrow_bottom_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/base_top_title"
            android:layout_marginLeft="5dp"
            android:layout_centerVertical="true"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_notice_message"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:background="?attr/selectableItemBackgroundBorderless"

        android:visibility="visible"
        >
        <ImageView
            android:id="@+id/iv_toolbar_right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="visible"
            android:layout_centerInParent="true"
            android:clickable="false"
            android:src="@drawable/teacher_homepage_icon_message" />
        <TextView
            android:id="@+id/tv_notice_count"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/aii"
            android:layout_marginTop="7dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:visibility="visible"
            android:clickable="false"
            android:text="100"
            android:textSize="10sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:clickable="true"
        android:text="@string/title"
        android:visibility="gone"
        android:textSize="14sp"
        android:textColor="@color/title_txt_white"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:drawablePadding="2dp"

        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        />
</RelativeLayout>