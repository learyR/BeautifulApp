<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_8"
        android:background="?attr/selectableItemBackgroundGeneral">

        <RelativeLayout
            android:id="@+id/item_user_info_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_38"
            android:layout_marginTop="@dimen/dp_4">
            <RelativeLayout
                android:id="@+id/item_header_layout"
                android:layout_width="@dimen/dp_35"
                android:layout_height="@dimen/dp_35"
                android:layout_centerVertical="true">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_header_bg"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_centerInParent="true"
                    android:src="#fff5f5f9"
                    app:civ_border_color="#fff5f5f9"
                    app:civ_border_width="1dp" />
                <TextView
                    android:id="@+id/item_header_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerInParent="true"
                    android:padding="@dimen/dp_2"
                    android:maxEms="3"
                    android:singleLine="true"
                    android:gravity="center"
                    android:maxLength="3"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp_11" />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_header"
                    android:layout_width="@dimen/dp_35"
                    android:layout_height="@dimen/dp_35"
                    android:layout_centerInParent="true"
                    />
            </RelativeLayout>



            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_toRightOf="@id/item_header_layout">

                <TextView
                    android:id="@+id/item_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#ff7b7b7b"
                    android:textSize="@dimen/sp_14" />

                <TextView
                    android:id="@+id/item_type_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/item_name_tv"
                    android:layout_alignBottom="@id/item_name_tv"
                    android:layout_alignTop="@id/item_name_tv"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:gravity="center_vertical"
                    android:text=""
                    android:padding="@dimen/dp_1"
                    android:textColor="#ffa4a4a4"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/item_time_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/item_name_tv"
                    android:text=""
                    android:textColor="#ffb1b1b1"
                    android:textSize="@dimen/sp_11" />
            </RelativeLayout>


        </RelativeLayout>



        <TextView
            android:id="@+id/item_descript_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_user_info_layout"
            android:layout_marginTop="@dimen/dp_5"
            android:lineSpacingMultiplier="1.3"
            android:paddingBottom="@dimen/dp_2"
            android:text=""
            android:textColor="#ff838383"
            android:textSize="@dimen/sp_13" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_7"
        android:background="#fff5f5f9"/>
    <ImageView
        android:id="@+id/tv_state"
        android:layout_width="@dimen/dp_48"
        android:layout_height="@dimen/dp_41"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_4"
        android:scaleType="fitXY"
        android:src="@drawable/teacher_leave_icon_pass_n" />
</RelativeLayout>